<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet" />
    <base href="/">
    <script src="https://kit.fontawesome.com/625c7efa43.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/shipper-dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Distribution hub containing the orders-->
    <div id="dis-hub">
        <h2>Distribution hub name</h2>
        <h3 class="fw-light">Active orders</h3>
        <div class="order-card pt-2 pb-2 ps-3 mt-5">
            <h6 class="card-heading">Order ID</h6>
            <p class="order-id ps-5" id="show-overlay">Order Id here</p>
            <h6 class="card-heading">Address</h6>
            <p class="cart-content"><img src="/img/to-button.png" alt="To button" width="30px" height="30px">Address
                here
            </p>
            <h6 class="card-heading">Customer</h6>
            <p class="cart-content">Customer name</p>
            <h6 class="card-heading">Status</h6>
            <p class="active-status ps-5"> <img src="/img/loading-bar.png" class="pe-2" alt="Loading bar">Active</p>
        </div>
    </div>

    <!--Order details-->
    <div class="ord-details px-3 py-2 position-fixed cursor-pointer">
        <button class="btn btn-close position-absolute cursor-pointer" id="hide-overlay"></button>
        <div id="overview">
            <h2>Order ID</h2>
            <div class="d-flex justify-content-center container">
                <div class="customer mt-2 me-5 p-3 pb-1 bg-white container">
                    <h5 class="fw-light"><img src="/img/customer-icon.png" alt="Customer icon">Customer name</h5>
                    <p class="text-center">Name here</p>
                </div>
                <div class="address mt-2 p-3 pb-1 bg-white container">
                    <h5 class="fw-light"><img src="/img/map-icon.png" alt="Location icon">Address</h5>
                    <p class="text-center">Address here</p>
                </div>
            </div>
        </div>
        <div id="items" class="mt-1">
            <h5>Item list</h5>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                <tr>
                    <td>Name here</td>
                    <td>Quantity here</td>
                    <td>Price here</td>
                </tr>
                <tr>
                    <td colspan="2" class="text-end fw-bold">Total price</td>
                    <td class="fw-bold">Total price</td>
                </tr>
            </table>
        </div>
        <div class="status">
            <label for="status" class="fs-5 fw-bold">Status</label>
            <select name="status" id="status" class="fw-light bg-light">
                <option value="active">Active</option>
                <option value="delivered">Delivered</option>
                <option value="canceled">Canceled</option>
            </select>
        </div>
    </div>
    <script src="/js/dashboard.js"></script>
</body>

</html>