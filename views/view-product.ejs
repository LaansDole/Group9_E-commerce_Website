<!DOCTYPE html>
<html>
  <head>
    <title>Read Products</title>
  </head>
  <body>
    <h1>Products</h1>
    <table>
      <tr>
        <th>Image</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Categories</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
      <% products.forEach(function(product) { %>
        <tr>
          <td><img src="/uploads/<%- product.image %>" alt="<%- product.name %>" loading="lazy" width="50" height="50"></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td><%= product.category %></td>
          <td><a href="/vendor/<%= product.id %>/update">Click here</a> </td>
          <td><a href="/vendor/<%= product.id %>/delete">Click here</a></td>
        </tr>
      <% }); %>
    </table>
  </body>
</html>