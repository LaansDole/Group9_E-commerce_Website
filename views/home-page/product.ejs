      <div class="row">
        <div class="col-12"><h1><%- product.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- product.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>E-Commerce Instructions</h4>
          <%- product.description %>
        </div>
      </div>

