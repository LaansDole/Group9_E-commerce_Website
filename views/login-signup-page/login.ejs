<div class="login-container">
  <p class="title">Nice to see you again!</p>
  <div class="seperator"></div>
  <form class="login-form" action="/login" method="post">
    <div class="form-control">
      <input type="text" placeholder="Email or phone number" name="userName">
     </div> 
     <div class="form-control"> 
      <input type="password" placeholder="Password" name="password">
     </div>
     <button class="submit">Sign in</button>
  </form>
  <div class="sub-login">
    <input type="checkbox" id="remmeber_me" class="toggle">
    <label for="remmeber_me" style="color: black;"> Remember Me</label>
    <a href="#">Forgot password?</a>
  </div>
  <br>
  <p>
    Don't have an account? <a href="/signup" style="color: #0203ac">Get Started</a>
  </p>
</div>

