<form class="login-form" action="/api/user/register-shipper" method="post" enctype="multipart/form-data">
  <div class="form-control">
    <label>Username</label> 
    <input type="text" placeholder="Enter username" name="userName" required>
  </div> 
  <div class="form-control"> 
    <label>Password</label> 
    <input type="password" placeholder="Enter password" name="password" onkeyup="checkPassword(this.value)" required>
    <span id="toggleEye"></span>
    <div class="validation">
      <ul>
        <li id="lower">At least one lowercase character</li>
        <li id="upper">At least one uppercase character</li>
        <li id="number">At least one number</li>
        <li id="special">At least one special character</li>
        <li id="length">At least 8 chracters</li>
      </ul>
    </div>
  </div>
  <div class="form-control">
    <label>Profile picture</label> 
    <input type="file" id="image_input" name="profilePicture">
    <div id="display-img"></div>
   </div>
  <div class="form-control">
    <label>Choose Distribution Hub</label> 
    <select name="hubName" id="hubName">
      <option value="">Select a hub:</option>
      <option value="HCM">HCM City</option>
      <option value="DN">DN City</option>
      <option value="HN">HN City</option>
    </select>

<input type="hidden" name="hubAddress" id="hubAddress" value="">

  </div>
  <button class="submit">Register</button>
</form>
